{
  "source": {
    "include": ["src"],
    "includePattern": "\\.(jsx|js|ts|tsx)$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": [
    "plugins/markdown",
    "node_modules/better-docs/typescript",
    "node_modules/better-docs/component",
    "node_modules/better-docs/category"
  ],

  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "better-docs": {
      "name": "Product Preview Documentation",
      "title": "Product Preview",
      "hideGenerator": true,
      "navLinks": [
        {
          "label": "Github",
          "href": "https://github.com/BAXHEN-CORPORATION/product-preview-001"
        },
        {
          "label": "Live Preview",
          "href": "https://classy-narwhal-e82e98.netlify.app/"
        }
      ]
    }
  },

  "tags": {
    "allowUnknownTags": true
  },
  "opts": {
    "recurse": true,
    "destination": "./docs/",
    "template": "node_modules/better-docs",
    "readme": "README.md"
  }
}
